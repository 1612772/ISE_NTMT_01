<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageRestaurantH"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/fab_margin"
         />
    <LinearLayout
        android:id="@+id/shortInfoRestaurantH"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/restaurantNameH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat"
            android:maxLines="2"
            android:text="Restaurant"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold" />
        <RatingBar
            android:id="@+id/ratingRestaurantH"
            style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:rating="4.5" />
        <TextView
            android:id="@+id/ratingNumberH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="(134 phiáº¿u)"
            android:textColor="#595342"
            android:textSize="8sp"
            android:textStyle="italic" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorMAIN"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addressRestaurantListH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:text="address address"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/phoneRestaurantListH"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:singleLine="true"
                android:text="0123456789"
                android:textSize="8sp"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>